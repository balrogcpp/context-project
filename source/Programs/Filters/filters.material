//----------------------------------------------------------------------------------------------------------------------
// Cut bright parts of scene
//----------------------------------------------------------------------------------------------------------------------
fragment_program add_fs glsl glsles hlsl
{
	source add.frag
}

material Add
{
	technique
	{
		pass
		{
		    cull_hardware none
			depth_check off
            polygon_mode_overrideable false

			vertex_program_ref Ogre/Compositor/StdQuad_vp {}

			fragment_program_ref add_fs
			{
                param_named RT int 0
                param_named RT0 int 1
			}

			texture_unit RT
            {
                texture black.dds
                tex_coord_set 0
                tex_address_mode clamp
                filtering none
            }
            texture_unit rt0
            {
                texture black.dds
                tex_coord_set 0
                tex_address_mode clamp
                filtering none
            }
        }
	}
}
