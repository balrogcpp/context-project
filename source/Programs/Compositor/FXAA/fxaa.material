import STD from std.material

fragment_program fxaa glsl glsles hlsl
{
    source fxaa.frag
}

material FXAA : STD
{
	technique
	{
		pass
		{
            fragment_program_ref fxaa
			{
                param_named RT int 0
                param_named_auto TexelSize0 inverse_texture_size 0
			}

			texture_unit RT
            {
                texture black.dds
                tex_address_mode clamp
                filtering bilinear
            }
		}
	}
}
