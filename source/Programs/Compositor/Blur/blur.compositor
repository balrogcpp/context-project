//----------------------------------------------------------------------------------------------------------------------
// Motion blur
//----------------------------------------------------------------------------------------------------------------------

compositor Blur
{
    technique
    {
        texture_ref mrt MRT mrt
        texture_ref rt MRT rt

        target rt
        {
            pass render_quad
            {
                material Blur
                input 0 rt
                input 1 mrt 4
            }
        }
    }
}
