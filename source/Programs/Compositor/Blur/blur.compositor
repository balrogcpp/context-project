import STD from std.compositor

//----------------------------------------------------------------------------------------------------------------------
// Motion blur
//----------------------------------------------------------------------------------------------------------------------
compositor Blur : STD
{
    technique
    {
        target_output
        {
            pass render_quad
            {
                identifier 14
                quad_normals camera_far_corners_view_space
                material Blur
                input 0 rt
                input 1 mrt 1
                input 2 mrt 2
            }
        }
    }
}
