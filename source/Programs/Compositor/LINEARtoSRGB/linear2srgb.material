import STD from std.material

fragment_program LINEAR2SRGB glsl glsles hlsl
{
    source linear2srgb.frag
    target ps_2_0
}

material LINEAR2SRGB : STD
{
	technique
	{
		pass
		{
            fragment_program_ref LINEAR2SRGB
			{
                param_named RT int 0
			}

			texture_unit RT
            {
                texture black.dds
                tex_address_mode clamp
                filtering bilinear
            }
		}
	}
}
