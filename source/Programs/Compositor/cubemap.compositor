//----------------------------------------------------------------------------------------------------------------------
// Abstract node to avoid copy & paste
//----------------------------------------------------------------------------------------------------------------------
abstract target cubemap_target
{
    shadows off
    only_initial on

    pass clear {}
    pass render_scene
    {
        //last_render_queue 5
        camera CubeCamera align_to_face
    }
}

//----------------------------------------------------------------------------------------------------------------------
// https://github.com/OGRECave/ogre/blob/6e1560ec9a920f72eb43182336926cdb7de596b4/Samples/Media/materials/scripts/Examples.compositor#L808
//----------------------------------------------------------------------------------------------------------------------
compositor CubeMap
{
    technique
    {
        compositor_logic DeferredLogic
        texture cube 128 128 PF_R11G11B10_FLOAT cubic no_fsaa

        target cube 0 : cubemap_target {}
        target cube 1 : cubemap_target {}
        target cube 2 : cubemap_target {}
        target cube 3 : cubemap_target {}
        target cube 4 : cubemap_target {}
        target cube 5 : cubemap_target {}

        target_output
        {
            input previous
        }
    }
}
