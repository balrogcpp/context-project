//----------------------------------------------------------------------------------------------------------------------
// Motion blur
//----------------------------------------------------------------------------------------------------------------------

compositor Blur
{
    technique
    {
        texture_ref mrt MRT mrt
        texture rt target_width target_height PF_R11G11B10_FLOAT

        target rt
        {
            input previous
        }

        target_output
        {
            pass render_quad
            {
                material Blur
                input 0 rt
                input 1 mrt 5
            }
        }
    }
}
