import RayCast from std.material
import STD from std.material

//----------------------------------------------------------------------------------------------------------------------
// SSR
//----------------------------------------------------------------------------------------------------------------------
fragment_program ssr glsl glsles hlsl
{
	source ssr.frag
    target ps_2_0
}

material SSR : RayCast
{
    technique
    {
        pass
        {
            fragment_program_ref ssr
            {
                param_named DepthMap int 0
                param_named NormalMap int 1
                param_named GlossMap int 2
            }

            texture_unit Depth
            {
                texture black.dds
                tex_address_mode clamp
                filtering bilinear
            }
            texture_unit Normal
            {
                texture black.dds
                tex_address_mode clamp
                filtering bilinear
            }
            texture_unit Gloss
            {
                texture black.dds
                tex_address_mode clamp
                filtering bilinear
            }
        }
    }
}

fragment_program ssrRec glsl glsles hlsl
{
	source ssrRec.frag
    target ps_2_0
}

material ssrRec : STD
{
    technique
    {
        pass
        {
            fragment_program_ref ssrRec
            {
                param_named SsrTex int 0
                param_named SsrTex2 int 1
            }

            texture_unit SSR
            {
                texture black.dds
                tex_address_mode clamp
                filtering bilinear
            }
            texture_unit SSR2
            {
                texture black.dds
                tex_address_mode clamp
                filtering bilinear
            }
        }
    }
}


fragment_program ssrMod glsl glsles hlsl
{
	source ssrMod.frag
    target ps_2_0
}

material ssrMod : STD
{
    technique
    {
        pass
        {
            fragment_program_ref ssrMod
            {
                param_named RT int 0
                param_named SsrMap int 1
                param_named GlossMap int 2
            }

            texture_unit RT
            {
                texture black.dds
                tex_address_mode clamp
                filtering none
            }
            texture_unit SSR
            {
                texture black.dds
                tex_address_mode clamp
                filtering bilinear
            }
            texture_unit Gloss
            {
                texture black.dds
                tex_address_mode clamp
                filtering none
            }
        }
    }
}
