compositor SSR : STD
{
    technique
    {
        target_output
        {
            pass render_quad
            {
                identifier 2
                quad_normals camera_far_corners_view_space
                material SSR
                input 0 rt
                input 1 mrt 2
                input 2 mrt 3
                input 3 mrt 1
            }
        }
    }
}
