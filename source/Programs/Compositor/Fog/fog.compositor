compositor Fog
{
    technique
    {
        texture_ref mrt MRT mrt
        texture_ref rt MRT rt

        target rt
        {
            pass render_quad
            {
                material Fog
                input 0 rt
                input 1 mrt 2
            }
        }
    }
}
