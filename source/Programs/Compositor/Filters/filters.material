abstract material Filter
{
	technique
	{
		pass
		{
		    cull_hardware none
            depth_check off
            depth_write off
            polygon_mode_overrideable false

			vertex_program_ref StdQuad {}

			texture_unit RT
            {
                texture black.dds
                tex_address_mode clamp
                filtering bilinear
            }
		}
	}
}

material FilterY : Filter
{
	technique
	{
		pass
		{
			fragment_program_ref gaussy
			{
                param_named RT int 0
                param_named_auto TexelSize0 inverse_texture_size 0
			}
		}
	}
}

