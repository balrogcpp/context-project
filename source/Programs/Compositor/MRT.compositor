//----------------------------------------------------------------------------------------------------------------------
compositor noMRT
{
    technique
    {
        texture mrt target_width target_height PF_R11G11B10_FLOAT

        target mrt
        {
            pass clear {}

            pass render_scene {}
        }

        target_output
        {
            pass render_quad
            {
                material Bypass
                input 0 mrt
            }
        }
    }
}

//----------------------------------------------------------------------------------------------------------------------
//
//----------------------------------------------------------------------------------------------------------------------
compositor MRT
{
    technique
    {
        texture mrt target_width target_height PF_R11G11B10_FLOAT PF_FLOAT16_R PF_FLOAT16_GR chain_scope
        texture rt0 target_width target_height PF_R11G11B10_FLOAT chain_scope

        target mrt
        {
            pass clear {}

            pass render_scene {}
        }

        target rt0
        {
            pass render_quad
            {
                material Bypass
                input 0 mrt 0
            }
        }
    }
}

