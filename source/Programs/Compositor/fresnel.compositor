compositor Fresnel
{
    technique
    {
        texture reflection target_width_scaled 0.25 target_height_scaled 0.5 PF_R11G11B10_FLOAT no_fsaa

        target reflection
        {
            visibility_mask 0x00F // SURFACE objects
            shadows off
            pass clear {}
            pass render_scene {}
        }

        target_output
        {
            input previous
        }
    }
}
