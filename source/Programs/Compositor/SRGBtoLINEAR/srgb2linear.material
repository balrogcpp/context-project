import STD from std.material

fragment_program SRGB2LINEAR glsl glsles hlsl
{
    source srgb2linear.frag
    target ps_2_0
}

material SRGB2LINEAR : STD
{
	technique
	{
		pass
		{
            fragment_program_ref SRGB2LINEAR
			{
                param_named RT int 0
			}

			texture_unit RT
            {
                texture black.dds
                tex_address_mode clamp
                filtering bilinear
            }
		}
	}
}
