fragment_program Output_fs glsl glsles
{
    source LINEARtoSRGB.frag
    preprocessor_defines NONE
	default_params
	{
		param_named uExposure float 1.0
	}
}

material Output
{
	technique
	{
		pass
		{
		    cull_hardware none
			depth_check off
            polygon_mode_overrideable false

			vertex_program_ref Ogre/Compositor/StdQuad_vp {}

			fragment_program_ref Output_fs
			{
                param_named uSceneSampler int 0
			}

			texture_unit rt
            {
                texture black.dds
                tex_coord_set 0
                tex_address_mode clamp
                filtering bilinear
            }
		}
	}
}
