import STD from stdquad.material

fragment_program Lens glsl glsles hlsl
{
	source lens.frag
}

material Lens : STD
{
    technique
    {
        pass
        {
            fragment_program_ref Lens
			{
                param_named RT int 0
                param_named_auto ViewportSize viewport_size
			}

            texture_unit RT
            {
                texture black.dds
                tex_address_mode clamp
                filtering bilinear
            }
        }
    }
}

fragment_program lensFBO glsl glsles hlsl
{
	source lensFBO.frag
}

material LensFBO : STD
{
	technique
	{
		pass
		{
            fragment_program_ref lensFBO
			{
                param_named RT int 0
            }

            texture_unit RT
            {
                texture black.dds
                tex_address_mode clamp
                filtering bilinear
            }
		}
	}
}

fragment_program lensMOD glsl glsles hlsl
{
	source lensMOD.frag
}

material LensMOD : STD
{
    technique
    {
        pass
        {
            fragment_program_ref lensMOD
            {
                param_named RT int 0
                param_named FBO int 1
            }

            texture_unit FBO
            {
                texture black.dds
                tex_address_mode clamp
                filtering bilinear
            }
        }
    }
}
