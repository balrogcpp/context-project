material Examples/LightRibbonTrail : PBR
{
    //receive_shadows off
    //transparency_casts_shadows off

	technique
	{
		pass
		{
			//lighting off
			//scene_blend add
			//depth_write off
			//diffuse vertexcolour

			texture_unit
			{
				texture ribbonband.dds 1d
				tex_address_mode clamp
				filtering none
			}

			//rtshader_system {}
		}
	}
}

