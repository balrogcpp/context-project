material Copyback
{
    technique
    {
        pass
        {
            cull_hardware none
            depth_check off
            depth_write off
            polygon_mode_overrideable false
            lighting off

            vertex_program_ref StdQuad {}

            fragment_program_ref Copyback
            {
                param_named RT int 0
            }

            texture_unit RT
            {
                texture black.dds
                tex_address_mode clamp
                filtering bilinear
            }
        }
    }
}

