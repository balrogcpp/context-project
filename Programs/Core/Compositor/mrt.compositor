compositor no_MRT
{
    technique
    {
        texture mrt target_width target_height PF_FLOAT16_RGBA chain_scope pooled

        target mrt
        {
            input none

            pass clear {}

            pass render_scene {}
        }
    }
}

compositor MRT
{
    technique
    {
        texture mrt target_width target_height PF_FLOAT16_RGBA PF_FLOAT16_R PF_FLOAT16_GR chain_scope pooled

        target mrt
        {
            input none

            pass clear {}

            pass render_scene {}
        }
    }
}
