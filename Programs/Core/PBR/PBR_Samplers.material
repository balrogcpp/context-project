sampler ShadowSampler
{
    tex_address_mode border
    tex_border_colour 1 1 1 1
}

sampler PBRSampler
{
    filtering anisotropic
    max_anisotropy 8
}

sampler PBRSSAOSampler
{
    tex_address_mode clamp
    filtering none
}
