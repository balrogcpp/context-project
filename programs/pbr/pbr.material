////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
shared_params PBR_Shared
{
    shared_param_named uNormalScale float 1.0
    shared_param_named uOcclusionScale float 1.0
    shared_param_named uOffsetScale float 0.02
}

vertex_program PBR_vs glsl glsles
{
	source pbr.vert
    preprocessor_defines HAS_NORMALS,HAS_TANGENTS,MAX_LIGHTS=10,SHADOWRECEIVER,MAX_SHADOW_TEXTURES=5
}

fragment_program PbrBasic_fs glsl glsles
{
	source pbr.frag
    preprocessor_defines HAS_NORMALS,HAS_TANGENTS,HAS_BASECOLORMAP,MAX_LIGHTS=10,SHADOWRECEIVER,MAX_SHADOW_TEXTURES=5
}

fragment_program PBR_fs glsl glsles
{
	source pbr.frag
    preprocessor_defines HAS_NORMALS,HAS_TANGENTS,HAS_BASECOLORMAP,HAS_EMISSIVEMAP,HAS_NORMALMAP,HAS_METALLICMAP,HAS_ROUGHNESSMAP,HAS_OCCLUSIONMAP,HAS_PARALLAXMAP,MAX_LIGHTS=10,SHADOWRECEIVER,MAX_SHADOW_TEXTURES=5
    default_params {
        shared_params_ref PBR_Shared
    }
}

fragment_program PBR_IBL_fs glsl glsles
{
    source pbr.frag
    preprocessor_defines HAS_NORMALS,HAS_TANGENTS,HAS_BASECOLORMAP,HAS_EMISSIVEMAP,HAS_NORMALMAP,HAS_METALLICMAP,HAS_ROUGHNESSMAP,HAS_OCCLUSIONMAP,HAS_PARALLAXMAP,USE_IBL,MAX_LIGHTS=10,SHADOWRECEIVER,MAX_SHADOW_TEXTURES=5
    default_params {
        shared_params_ref PBR_Shared
    }
}

abstract material Basic
{
    transparency_casts_shadows off
    receive_shadows on

    technique
    {
        pass
        {
            specular 1 1 1 1
            diffuse 1 1 1
            ambient 0 0 0

            texture_unit Albedo
            {
                texture white.dds
            }

            vertex_program_ref PBR_vs {}

            fragment_program_ref PbrBasic_fs
            {
                param_named uAlbedoSampler int 0
            }
        }
    }
}

abstract material PBR
{
    transparency_casts_shadows off
    receive_shadows on

    set $Albedo white.dds
    set $Normal normal.dds
    set $Metallic white.dds
    set $Roughness white.dds
    set $AO white.dds
    set $Emissive black.dds
    set $Offset black.dds

    technique
    {
      pass
      {
            diffuse 1 1 1
            specular 1 1 1 1
            ambient 0 0 0

            texture_unit Albedo
            {
                texture $Albedo
            }
            texture_unit Normal
            {
                texture $Normal
            }
            texture_unit Metallic
            {
                texture $Metallic
                filtering bilinear
            }
            texture_unit Roughness
            {
                texture $Roughness
                filtering bilinear
            }
            texture_unit AO
            {
                texture $AO
                filtering bilinear
            }
            texture_unit Emissive
            {
                texture $Emissive
                filtering bilinear
            }
            texture_unit Offset
            {
                texture $Offset
                filtering bilinear
            }

            vertex_program_ref PBR_vs {}

			fragment_program_ref PBR_fs
			{
                param_named uAlbedoSampler      int 0
                param_named uNormalSampler      int 1
                param_named uMetallicSampler    int 2
                param_named uRoughnessSampler   int 3
                param_named uOcclusionSampler   int 4
                param_named uEmissiveSampler    int 5
                param_named uOffsetSampler      int 6
			}
        }
    }
}

abstract material PBR_IBL : PBR
{
    transparency_casts_shadows off
    receive_shadows on

    technique
    {
      pass
      {
            texture_unit IBL_Diffuse
            {
                texture diffuse.dds cubic
                tex_address_mode clamp
            }
            texture_unit IBL_Specular
            {
                texture specular.dds cubic
                tex_address_mode clamp
            }
            texture_unit IBL_LUT
            {
                tex_address_mode clamp
                texture brdfLUT.dds
                filtering bilinear
            }

            vertex_program_ref PBR_vs {}

			fragment_program_ref PBR_IBL_fs
			{
                param_named uAlbedoSampler      int 0
                param_named uNormalSampler      int 1
                param_named uMetallicSampler    int 2
                param_named uRoughnessSampler   int 3
                param_named uOcclusionSampler   int 4
                param_named uEmissiveSampler    int 5
                param_named uOffsetSampler      int 6
                param_named uDiffuseEnvSampler  int 7
                param_named uSpecularEnvSampler int 8
                param_named ubrdfLUT            int 9
			}
        }
    }
}

