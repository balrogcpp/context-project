{
	source pbr.frag
    preprocessor_defines HAS_NORMALS,HAS_TANGENTS,HAS_BASECOLORMAP,HAS_NORMALMAP,HAS_EMISSIVEMAP,HAS_METALLICMAP,HAS_ROUGHNESSMAP,HAS_PARALLAXMAP,HAS_OCCLUSIONMAP,HAS_REFLECTION,MAX_LIGHTS=10,SHADOWRECEIVER,MAX_SHADOW_TEXTURES=5

    default_params
    {
        param_named uDepthOffset float 0.0001
        shared_params_ref PBR_Shared
    }
}

abstract material Plane : PBR
{
    receive_shadows on
    transparency_casts_shadows off

    technique
    {
      pass
      {
            texture_unit ReflectionMap
            {
                texture black.dds
                filtering bilinear
            }

            vertex_program_ref PbrReflective_vs {}

			fragment_program_ref PbrReflective_fs
			{
                param_named uAlbedoSampler      int 0
                param_named uNormalSampler      int 1
                param_named uMetallicSampler    int 2
                param_named uRoughnessSampler   int 3
                param_named uOcclusionSampler   int 4
                param_named uEmissiveSampler    int 5
                param_named uOffsetSampler      int 6
                param_named uReflectionMap      int 7
			}
        }
    }
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
vertex_program PbrTerrain_vs glsl glsles
{
	source pbr.vert
    preprocessor_defines MAX_LIGHTS=10,SHADOWRECEIVER,MAX_SHADOW_TEXTURES=5
}

fragment_program PbrTerrain_fs glsl glsles
{
	source pbr.frag
    preprocessor_defines HAS_BASECOLORMAP,HAS_EMISSIVEMAP,HAS_NORMALMAP,HAS_METALLICMAP,HAS_ROUGHNESSMAP,HAS_OCCLUSIONMAP,HAS_PARALLAXMAP,MAX_LIGHTS=10,SHADOWRECEIVER,MAX_SHADOW_TEXTURES=5,TERRAIN

    default_params
    {
        param_named uDepthOffset float 0.0001
        shared_params_ref PBR_Shared
    }
}

abstract material Terrain : PBR
{
    receive_shadows on
    transparency_casts_shadows off

    technique
    {
      pass
      {
            texture_unit GlobalNormal
            {
                texture normal.dds
                filtering bilinear
            }
            texture_unit GlobalShadow
            {
                texture white.dds
                filtering bilinear
            }

            vertex_program_ref PbrTerrain_vs {}

			fragment_program_ref PbrTerrain_fs
			{
			    param_named uDepthOffset float 0.001

                param_named uAlbedoSampler       int 0
                param_named uNormalSampler       int 1
                param_named uMetallicSampler     int 2
                param_named uRoughnessSampler    int 3
                param_named uOcclusionSampler    int 4
                param_named uEmissiveSampler     int 5
                param_named uOffsetSampler       int 6
                param_named uGlobalNormalSampler int 7
                //param_named uGlobalShadowSampler int 8
			}
        }
    }
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
fragment_program PbrPaged_fs glsl glsles
{
	source pbr.frag
    preprocessor_defines PAGED_GEOMETRY,HAS_NORMALS,HAS_TANGENTS,HAS_BASECOLORMAP,HAS_ALPHA,MAX_LIGHTS=10,SHADOWRECEIVER,MAX_SHADOW_TEXTURES=5
}

abstract material Paged : Basic
{
    receive_shadows on
    transparency_casts_shadows on

    set $Albedo white.dds

    technique
    {
      pass
      {
            alpha_rejection greater_equal 127

			vertex_program_ref PBR_vs {}

			fragment_program_ref PbrPaged_fs
			{
                param_named uAlbedoSampler int 0
			}
        }
    }
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
vertex_program PbrPaged_vs glsl glsles
{
	source pbr.vert
    preprocessor_defines PAGED_GEOMETRY,HAS_NORMALS,HAS_TANGENTS,HAS_COLOURS,MAX_LIGHTS=10,SHADOWRECEIVER,MAX_SHADOW_TEXTURES=5
}

fragment_program PbrGrass_fs glsl glsles
{
	source pbr.frag
    preprocessor_defines PAGED_GEOMETRY,HAS_NORMALS,HAS_TANGENTS,HAS_BASECOLORMAP,HAS_COLOURS,HAS_ALPHA,MAX_LIGHTS=10,SHADOWRECEIVER,MAX_SHADOW_TEXTURES=5
}

abstract material Grass : Basic
{
    receive_shadows on
    transparency_casts_shadows on

    set $Albedo white.dds

    technique
    {
      pass
      {
            alpha_rejection greater_equal 127
            cull_hardware none
            cull_software none

			vertex_program_ref PbrPaged_vs {}

			fragment_program_ref PbrGrass_fs
			{
                param_named uAlbedoSampler int 0
			}
        }
    }
}