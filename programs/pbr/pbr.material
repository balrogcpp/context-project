vertex_program PbrReflective_vs glsl glsles
{
	source pbr.vert
    preprocessor_defines HAS_NORMALS,HAS_TANGENTS,HAS_REFLECTION,MAX_LIGHTS=10,SHADOWRECEIVER,MAX_SHADOW_TEXTURES=5
