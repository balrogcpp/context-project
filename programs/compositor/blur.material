fragment_program Context/compose_fs unified
{
	delegate Context/compose_fsGLSL
	delegate Context/compose_fsGLSLES

    default_params
    {
        param_named ShadowSampler0 int 0
        param_named ShadowSampler1 int 1
        param_named ShadowSampler2 int 2
    }
}

material Context/compose
{
	technique
	{
		pass
		{
			lighting off
            polygon_mode_overrideable false

			texture_unit
            {
                content_type shadow
                tex_address_mode clamp
                filtering none
            }

			texture_unit
            {
                content_type shadow
                tex_address_mode clamp
                filtering none
            }

			texture_unit
            {
                content_type shadow
                tex_address_mode clamp
                filtering none
            }

			vertex_program_ref Ogre/Compositor/StdQuad_vp {}

			fragment_program_ref Context/compose_fs {}
		}
	}
}
