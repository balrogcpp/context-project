fragment_program Context/blury_fsGLSL glsl
{
	source blur5y.frag
}

fragment_program Context/blur1_fsGLSLES glsles
{
	source blur5y.frag
}

fragment_program Context/blury_fs unified
{
	delegate Context/blury_fsGLSL
	delegate Context/blury_fsGLSLES

    default_params
    {
        param_named AttenuationSampler int 0
        param_named_auto inv_size inverse_texture_size 0
    }
}

material Context/blury
{
	technique
	{
		pass
		{
			lighting off
            polygon_mode_overrideable false

			vertex_program_ref Ogre/Compositor/StdQuad_vp {}

			fragment_program_ref Context/blury_fs {}

			texture_unit
            {
                content_type compositor Context/Compose compose
                filtering none
            }
		}
	}
}

