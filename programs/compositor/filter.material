fragment_program Context/filtery_fsGLSL glsl
{
	source filtery.frag
}

fragment_program Context/filtery_fsGLSLES glsles
{
	source filtery.frag
}

fragment_program Context/filtery_fs unified
{
	delegate Context/filtery_fsGLSL
	delegate Context/filtery_fsGLSLES

    default_params
    {
        param_named_auto screenSize viewport_size
        param_named AttenuationSampler int 0
    }
}

material Context/SSAO/filtery
{
	technique
	{
		pass
		{
			lighting off
            polygon_mode_overrideable false

			vertex_program_ref Ogre/Compositor/StdQuad_vp {}

			fragment_program_ref Context/filtery_fs {}

			texture_unit
            {
                content_type compositor Context/SSAO ssao
                filtering linear linear none
            }
		}
	}
}
